<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/white"
              android:orientation="vertical"
              android:minHeight="100dp"
              android:layout_marginBottom="8dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/prayer_title"
                android:paddingRight="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Subject"
                android:textStyle="bold"
                android:textSize="20dp"
                style="@style/text" />
    </LinearLayout>
    <View   android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    <TextView
            android:id="@+id/prayer_text"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:text="content"
            android:textSize="16sp"
            style="@style/text" />
    <View   android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    <TextView
            android:id="@+id/prayer_timestamp"
            android:padding="2dp"
            android:gravity="center"
            android:text="Posted by Mark Ha 10 minutes ago"
            android:textStyle="italic"
            android:textSize="12sp"
            style="@style/text" />
    <View   android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:padding="1dp"
            android:layout_height="34dp"
            android:background="@color/dark_gray">
        <TextView
                android:id="@+id/prayer_btn_pray"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textSize="14sp"
                android:text="Prays(X)"
                android:background="@drawable/gray_holoblue" />
        <TextView
                android:id="@+id/prayer_btn_comment"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textSize="14sp"
                android:text="Comments(X)"
                android:background="@drawable/gray_holoblue" />
    </LinearLayout>
</LinearLayout>