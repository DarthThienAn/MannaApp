<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/dark_gray"
              android:orientation="vertical"
              android:layout_marginBottom="8dp"
              android:padding="1dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/prayer_text"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:padding="15dp"
            android:gravity="center_vertical"
            android:text="content"
            android:textSize="16sp"
            style="@style/text" />
    <View   android:layout_width="fill_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_height="1dp"
            android:background="@color/gray" />
    <TextView
            android:id="@+id/prayer_timestamp"
            android:background="@color/white"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:padding="2dp"
            android:gravity="center"
            android:text="Posted by Mark Ha 10 minutes ago"
            android:textStyle="italic"
            android:textSize="12sp"
            style="@style/text" />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:paddingTop="1dp"
            android:background="@color/dark_gray">
        <TextView
                android:id="@+id/prayer_btn_pray"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textSize="14sp"
                android:text="Prays(X)"
                android:background="@drawable/gray_holoblue" />
        <TextView
                android:id="@+id/prayer_btn_reply"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textSize="14sp"
                android:text="Replies(X)"
                android:background="@drawable/gray_holoblue" />
    </LinearLayout>
</LinearLayout>