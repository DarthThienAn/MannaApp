<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/signature_main"
                android:background="@color/signature_background"
                android:padding="1dp"
                android:layout_height="40dp"
                android:layout_width="40dp"
        >
    <View android:id="@+id/signature_1"
          android:background="@color/white"
          android:layout_height="26dp"
          android:layout_width="13dp"/>
    <View android:id="@+id/signature_2"
          android:background="@color/white"
          android:layout_toRightOf="@id/signature_1"
          android:layout_height="13dp"
          android:layout_width="13dp" />
    <View android:id="@+id/signature_3"
          android:background="@color/white"
          android:layout_toRightOf="@id/signature_2"
          android:layout_height="13dp"
          android:layout_width="12dp" />
    <View android:id="@+id/signature_4"
          android:layout_below="@id/signature_2"
          android:layout_toRightOf="@id/signature_2"
          android:background="@color/white"
          android:layout_height="13dp"
          android:layout_width="12dp" />
    <View android:id="@+id/signature_5"
          android:layout_below="@id/signature_2"
          android:layout_toRightOf="@id/signature_1"
          android:background="@color/white"
          android:layout_height="13dp"
          android:layout_width="13dp" />
    <View android:id="@+id/signature_6"
          android:background="@color/white"
          android:layout_below="@id/signature_1"
          android:layout_toRightOf="@id/signature_1"
          android:layout_height="13dp"
          android:layout_width="25dp" />
    <View android:id="@+id/signature_7"
          android:background="@color/signature_corner"
          android:layout_below="@id/signature_1"
          android:layout_toLeftOf="@id/signature_6"
          android:layout_height="12dp"
          android:layout_width="13dp" />
    <View android:layout_height="1dp"
          android:layout_width="38dp"
          android:background="@color/black"
          android:layout_marginTop="12dp" />
    <View android:layout_height="1dp"
          android:layout_width="38dp"
          android:background="@color/black"
          android:layout_marginTop="25dp" />
    <View android:layout_height="38dp"
          android:layout_width="1dp"
          android:background="@color/black"
          android:layout_marginLeft="12dp" />
    <View android:layout_height="38dp"
          android:layout_width="1dp"
          android:background="@color/black"
          android:layout_marginLeft="25dp" />
</RelativeLayout>