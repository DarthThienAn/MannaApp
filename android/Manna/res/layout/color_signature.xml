<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/signature_main"
                android:background="@color/signature_background"
                android:padding="1dp"
                android:layout_height="52dp"
                android:layout_width="52dp"
        >
    <View android:id="@+id/signature_1"
          android:background="@color/white"
          android:layout_height="34dp"
          android:layout_width="17dp"/>
    <View android:id="@+id/signature_2"
          android:background="@color/white"
          android:layout_toRightOf="@id/signature_1"
          android:layout_height="17dp"
          android:layout_width="17dp" />
    <View android:id="@+id/signature_3"
          android:background="@color/white"
          android:layout_toRightOf="@id/signature_2"
          android:layout_height="17dp"
          android:layout_width="16dp" />
    <View android:id="@+id/signature_4"
          android:layout_below="@id/signature_2"
          android:layout_toRightOf="@id/signature_2"
          android:background="@color/white"
          android:layout_height="17dp"
          android:layout_width="16dp" />
    <View android:id="@+id/signature_5"
          android:layout_below="@id/signature_2"
          android:layout_toRightOf="@id/signature_1"
          android:background="@color/white"
          android:layout_height="17dp"
          android:layout_width="17dp" />
    <View android:id="@+id/signature_6"
          android:background="@color/white"
          android:layout_below="@id/signature_1"
          android:layout_toRightOf="@id/signature_1"
          android:layout_height="17dp"
          android:layout_width="33dp" />
    <View android:id="@+id/signature_7"
          android:background="@color/signature_corner"
          android:layout_below="@id/signature_1"
          android:layout_toLeftOf="@id/signature_6"
          android:layout_height="16dp"
          android:layout_width="17dp" />
    <View android:layout_height="1dp"
          android:layout_width="50dp"
          android:background="@color/black"
          android:layout_marginTop="16dp" />
    <View android:layout_height="1dp"
          android:layout_width="50dp"
          android:background="@color/black"
          android:layout_marginTop="33dp" />
    <View android:layout_height="50dp"
          android:layout_width="1dp"
          android:background="@color/black"
          android:layout_marginLeft="16dp" />
    <View android:layout_height="50dp"
          android:layout_width="1dp"
          android:background="@color/black"
          android:layout_marginLeft="33dp" />
</RelativeLayout>