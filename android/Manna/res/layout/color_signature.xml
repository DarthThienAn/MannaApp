<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/signature_main"
                android:background="#ff0500"
                android:padding="1dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
        >
    <View android:id="@+id/signature_1"
          android:background="#00ff00"
          android:layout_height="24dp"
          android:layout_width="16dp"/>
    <View android:id="@+id/signature_2"
          android:background="#005100"
          android:layout_toRightOf="@id/signature_1"
          android:layout_height="24dp"
          android:layout_width="16dp" />
    <View android:id="@+id/signature_3"
          android:background="@color/blue"
          android:layout_toRightOf="@id/signature_2"
          android:layout_height="24dp"
          android:layout_width="16dp" />
    <View android:id="@+id/signature_4"
          android:layout_below="@id/signature_1"
          android:background="@color/black"
          android:layout_height="24dp"
          android:layout_width="16dp" />
    <View android:id="@+id/signature_5"
          android:layout_below="@id/signature_2"
          android:layout_toRightOf="@id/signature_4"
          android:background="@color/gray"
          android:layout_height="24dp"
          android:layout_width="16dp" />
    <View android:id="@+id/signature_6"
          android:background="#ff77ee"
          android:layout_below="@id/signature_1"
          android:layout_toRightOf="@id/signature_5"
          android:layout_height="24dp"
          android:layout_width="16dp" />
</RelativeLayout>