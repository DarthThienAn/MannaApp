<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/dark_gray"
              android:orientation="vertical"
              android:minHeight="100dp"
              android:layout_marginBottom="8dp"
              android:padding="2dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:background="@color/white"
                  android:orientation="horizontal"
            >
        <LinearLayout android:id="@+id/signature"
                      android:layout_marginTop="1dp"
                      android:layout_marginLeft="1dp"
                      android:background="@color/black"
                      android:layout_height="40dp"
                      android:layout_width="40dp" />
        <TextView
                android:id="@+id/prayer_author"
                android:layout_height="wrap_content"
                android:layout_width="42dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_gravity="center_vertical"
                android:text="Anonymous"
                android:textStyle="bold"
                android:textSize="10sp" />
        <TextView
                android:id="@+id/prayer_title"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center_vertical|left"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Subject"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="asdf"
                style="@style/text" />
    </LinearLayout>
    <View   android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray" />
    <TextView
            android:id="@+id/prayer_text"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="message"
            android:textSize="16sp"
            style="@style/text" />
    <TextView
            android:id="@+id/prayer_timestamp"
            android:background="@color/white"
            android:padding="2dp"
            android:gravity="center"
            android:text="Posted by Mark Ha 10 minutes ago"
            android:textStyle="italic"
            android:textSize="12sp"
            style="@style/text" />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:paddingTop="2dp"
            android:layout_height="34dp"
            android:background="@color/dark_gray">
        <TextView
                android:id="@+id/prayer_btn_pray"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textSize="14sp"
                android:text="Prays(X)"
                android:background="@drawable/gray_holoblue" />
        <TextView
                android:id="@+id/prayer_btn_reply"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textSize="14sp"
                android:text="Replies(X)"
                android:background="@drawable/gray_holoblue" />
    </LinearLayout>
</LinearLayout>